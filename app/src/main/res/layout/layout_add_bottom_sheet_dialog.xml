<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_rounded"
    android:elevation="6dp"
    android:orientation="vertical"
    android:translationZ="6dp"
    app:behavior_hideable="true"
    app:behavior_peekHeight="0dp"
    app:layout_behavior="@string/bottom_sheet_behavior">

    <TextView
        style="@style/Split.Text.BottomSheet.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/small_space"
        android:paddingEnd="@dimen/small_space"
        android:paddingStart="@dimen/medium_space"
        android:paddingTop="@dimen/small_space"
        android:text="@string/add_bottom_sheet_title" />

    <TextView
        android:id="@+id/add_bill_option"
        style="@style/Split.Text.BottomSheet.Option"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:drawablePadding="@dimen/medium_space"
        android:drawableStart="@drawable/ic_bill"
        android:focusable="true"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/medium_space"
        android:paddingEnd="@dimen/large_space"
        android:paddingStart="@dimen/large_space"
        android:paddingTop="@dimen/medium_space"
        android:text="@string/add_bill_option" />

    <TextView
        android:id="@+id/add_people_option"
        style="@style/Split.Text.BottomSheet.Option"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:drawablePadding="@dimen/medium_space"
        android:drawableStart="@drawable/ic_person"
        android:focusable="true"
        android:gravity="center_vertical"
        android:paddingBottom="@dimen/medium_space"
        android:paddingEnd="@dimen/large_space"
        android:paddingStart="@dimen/large_space"
        android:paddingTop="@dimen/medium_space"
        android:text="@string/add_people_option" />
</LinearLayout>